{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "packages/**/*.ts",
    "packages/**/*.d.ts",
    "packages/**/*.tsx",
    "packages/**/*.vue",
    "playground/**/*.ts",
    "playground/**/*.d.ts",
    "playground/**/*.tsx",
    "playground/**/*.vue",
    "vite.config.lib.ts"
  ],
  "exclude": ["packages/**/__tests__/*", "packages/**/*.spec.ts"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./packages/*"]
    }
  }
}
