{
  "name": "fhtek-ui",
  "private": false,
  "type": "module",
  "version": "1.0.0",
  "description": "A Vue 3 component library",
  "main": "dist/index.umd.cjs",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "require": "./dist/fhtek-ui.umd.js",
      "import": "./dist/fhtek-ui.es.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "scripts": {
    "dev": "pnpm -F playground dev",
    "lib:build": "pnpm run -C packages/components build",
    "?lib:build:types": "vue-tsc --outDir dist",
    "lib:preview": "pnpm -F playground build-only && pnpm -F playground preview",
    "gen:i18n": "pnpm run -C i18n transform",
    "docs:dev": "pnpm -F docs dev",
    "docs:build": "pnpm -F docs docs:build",
    "docs:preview": "pnpm -F docs docs:preview",
    "?format": "prettier --write packages/",
    "?lint": "eslint . --fix",
    "?test": "vitest"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "dependencies": {
    "@fhtek-ui/components": "workspace:^",
    "@fhtek-ui/utils": "workspace:^",
    "@fhtek-ui/i18n": "workspace:^",
    "vue": "^3.5.22",
    "vue-i18n": "^11.1.12"
  },
  "devDependencies": {
    "@tsconfig/node22": "^22.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.18.6",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vitest/eslint-plugin": "^1.3.13",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.33.0",
    "eslint-plugin-vue": "~10.4.0",
    "jiti": "^2.5.1",
    "jsdom": "^27.0.0",
    "less": "^4.4.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.0",
    "vite": "^7.1.12",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.2",
    "vitest": "^3.2.4",
    "vue-tsc": "^3.1.0"
  }
}
